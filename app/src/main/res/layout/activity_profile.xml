                    <!--            android:layout_height="40dp">-->

                    <!--        </ImageView>-->




                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="15dp"
                    android:textColor="@color/black"
                    android:id="@+id/mail"
                    android:text="vasudevraut9912@gmail.com"/>

